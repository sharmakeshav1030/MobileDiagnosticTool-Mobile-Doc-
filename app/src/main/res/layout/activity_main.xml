<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Starting.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="147sp"
        android:layout_height="196sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="129sp"
        android:layout_marginLeft="129sp"
        android:layout_marginTop="26sp"
        android:layout_marginEnd="135sp"
        android:layout_marginRight="135sp"
